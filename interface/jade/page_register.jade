doctype html
html
    include config
    - page_title = "Регистрация"
    include head
    body
        .wrap-page.bg-noise
            include header
            .content(role='main')
                section.blue-block
                    .bg-noise
                        .container
                            h1.whiteh1 Регистрация
                            .enter-block.row
                                .col-md-6
                                    .form-enter
                                        p C помощью почты
                                        form.form-horizontal(role='form',method='post')
                                            input(type="hidden",name="csrfmiddlewaretoken",value=csrf_token)
                                            - error_cls = error && error.email?"has-error":""
                                            .form-group(class=error_cls)
                                                label.col-sm-4.control-label(for='inputEmail3') Email
                                                .col-sm-8
                                                    input#inputEmail3.form-control(type='email',name='email',required)
                                                    if error && error.email
                                                        p=error.email
                                            - error_cls = error && error.password?"has-error":""
                                            .form-group(class=error_cls)
                                                label.col-sm-4.control-label(for='inputPassword3') Пароль
                                                .col-sm-8
                                                    input#inputPassword3.form-control(type='password',name='password1',required)
                                                    if error && error.password
                                                        p=error.password
                                            - error_cls = error && error.password2?"has-error":""
                                            .form-group(class=error_cls)
                                                label.col-sm-4.control-label(for='inputPassword4') Повторите пароль
                                                .col-sm-8
                                                    input#inputPassword4.form-control(type='password',name='password2',required)
                                                    if error && error.password2
                                                        p=error.password2
                                            .form-group
                                                .col-sm-offset-4.col-sm-10
                                                    button.btn.btn-yellow1(type='submit') Зарегистрироваться
                                    //-
                                       .form-enter
                                .col-md-6
                                    .more-enter.margin0a
                                        p C помощью соц.сетей
                                        ul
                                            li
                                                a(href='/login/vk-oauth2', title='')
                                                    img(src=img_url + 'i-vk-b.png', alt='')
                                                    | ВКонтакте
                                            li
                                                a(href='/login/facebook', title='')
                                                    img(src=img_url + 'i-fb-b.png', alt='')
                                                    | Facebook
                                            li
                                                a(href='/login/twitter', title='')
                                                    img(src=img_url + 'i-tw-b.png', alt='')
                                                    | Twitter
                                            li
                                                a(href='/login/google-oauth2', title='')
                                                    img(src=img_url + 'i-go-b.png', alt='')
                                                    | Google +
                                    //-
                                       .more-enter
                            //-
                               .enter-block
                    //-
                       .blue-block
                //-
                   .content
            include footer
        script.
            $(document).ready(function () {window.InitApp({}, "Register")})
