    include head
    body
        .wrap-page.bg-noise
            include header
            .content(role='main')
                - if (cast.locations && cast.locations.length) {
                    section.broun-block-playlist
                        .bg-noise
                            .title-cast
                                .container
                                    .row
                                        .col-md-8.col-sm-7
                                            .name-playlist
                                                h2=cast.generic_title

                                    .row
                                        .col-md-8.col-sm-7
                                            div.cast-start-date=date_text(new Date(cast.start_date))

                                        .col-md-4.col-sm-5
                                            .cast-chat-header.fright
                                                img(src="/static/img/cast-chat-icon.png", alt="", title="")
                                                .fright
                                                    h3.cast-chat-title Чат

                            //-
                               .title-cast
                            .cast-area
                                .container
                                    .row
                                        .col-md-8.rpadding0
                                            each el in cast.locations
                                                a(id=el.id)
                                            a(id="player")
                                            .frame-player-wrapper
                                                .frame-player-aspect
                                                    .frame-player#frame_player

                                        .col-md-4.lpadding0
                                            .cast-chat-block
                                                .cast-chat-list-wrapper-out
                                                    .cast-chat-list-wrapper-in
                                                        .cast-chat-list
                                                            each chat_item in cast.chat_items
                                                                .cast-chat-item
                                                                    .cast-chat-item-body
                                                                        span.cast-chat-item-username=chat_item.user.name
                                                                            | #{": "}
                                                                        span.cast-chat-item-msg=chat_item.text
                                                input(type="text", placeholder="Введите сообщение и нажмите Enter").cast-chat-text-area
                                    .row
                                        .col-md-12
                                            if cast.locations.length > 1
                                                ul.just-list.list-btns-film.list-btns-cast#locations
                                                    each el in cast.locations
                                                        mixin loc_thumb(el)
                            //-
                               .cast-area
                    //-
                        .broun-block
                - }
            section.brd-top.cast-details
                .container
                    .row
                        .col-md-9
                            .playlist-content
                                .cast-share
                                    script(src="http://yandex.st/share/share.js", charset="utf-8")
                                    .yashare-auto-init(data-yasharetype="big", data-yashareL10n="ru", data-yashareQuickServices="vkontakte,odnoklassniki,moimir,facebook,twitter,gplus", data-yashareTheme="counter")
